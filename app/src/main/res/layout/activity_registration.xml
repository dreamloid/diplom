<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationActivity"
    android:background="@drawable/png_background_sign_and_reg">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="137dp"
        android:layout_height="137dp"

        android:layout_marginStart="23dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="200dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_logo" />
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="38dp"
        android:layout_marginTop="224dp"
        android:layout_marginEnd="212dp"

        android:text="Агро Инвест"
        android:textSize="15dp"
        android:textColor="@color/darkGreen"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:id="@+id/firstNameText"
        android:layout_width="325dp"
        android:layout_height="34dp"

        android:layout_marginStart="20dp"
        android:layout_marginTop="310dp"
        android:layout_marginEnd="20dp"

        android:inputType="text"
        android:hint="Имя"
        android:backgroundTint="@color/darkGreen"

        android:paddingStart="13dp"
        android:paddingEnd="20dp"
        android:paddingBottom="11dp"
        android:paddingTop="0dp"

        android:textColorHint="@color/darkGreen"
        android:textSize="20dp"
        android:textColor="@color/darkGreen"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:id="@+id/lastNameText"
        android:layout_width="325dp"
        android:layout_height="34dp"

        android:layout_marginStart="20dp"
        android:layout_marginTop="360dp"
        android:layout_marginEnd="20dp"

        android:inputType="text"
        android:hint="Фамилия"
        android:backgroundTint="@color/darkGreen"

        android:paddingStart="13dp"
        android:paddingEnd="20dp"
        android:paddingBottom="11dp"
        android:paddingTop="0dp"

        android:textColorHint="@color/darkGreen"
        android:textSize="20dp"
        android:textColor="@color/darkGreen"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:id="@+id/emailText"
        android:layout_width="325dp"
        android:layout_height="34dp"

        android:layout_marginStart="20dp"
        android:layout_marginTop="410dp"
        android:layout_marginEnd="20dp"

        android:inputType="textEmailAddress"
        android:hint="E-mail"
        android:backgroundTint="@color/darkGreen"

        android:paddingStart="13dp"
        android:paddingEnd="20dp"
        android:paddingBottom="11dp"
        android:paddingTop="0dp"

        android:textColorHint="@color/darkGreen"
        android:textSize="20dp"
        android:textColor="@color/darkGreen"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:id="@+id/passwordText"
        android:layout_width="325dp"
        android:layout_height="34dp"

        android:layout_marginStart="20dp"
        android:layout_marginTop="465dp"
        android:layout_marginEnd="20dp"

        android:inputType="textPassword"
        android:hint="Пароль"
        android:backgroundTint="@color/darkGreen"

        android:paddingStart="13dp"
        android:paddingEnd="20dp"
        android:paddingBottom="11dp"
        android:paddingTop="0dp"

        android:textColorHint="@color/darkGreen"
        android:textSize="20dp"
        android:textColor="@color/darkGreen"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:id="@+id/repeatpasswordText"
        android:layout_width="325dp"
        android:layout_height="34dp"

        android:layout_marginStart="20dp"
        android:layout_marginTop="520dp"
        android:layout_marginEnd="20dp"

        android:inputType="textPassword"
        android:hint="Повторите пароль"
        android:backgroundTint="@color/darkGreen"

        android:paddingStart="13dp"
        android:paddingEnd="20dp"
        android:paddingBottom="11dp"
        android:paddingTop="0dp"

        android:textColorHint="@color/darkGreen"
        android:textSize="20dp"
        android:textColor="@color/darkGreen"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.appcompat.widget.AppCompatButton
        android:onClick="onRegistrationButtonClick"
        android:id="@+id/registrationButton"
        android:layout_width="325dp"
        android:layout_height="52dp"

        android:layout_marginStart="20dp"
        android:layout_marginTop="575dp"
        android:layout_marginEnd="20dp"

        android:text="Зарегистрироваться"
        android:textAllCaps="true"
        android:textColor="@color/ligthGreen"
        android:textSize="18dp"
        android:background="@drawable/darkgreen_btn"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_marginStart="16dp"
        android:layout_marginBottom="48dp"
        android:layout_marginEnd="16dp"

        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Уже есть аккаунт?"
            android:textStyle="bold"
            android:textColor="@color/ligthGreen"
            android:textSize="16dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:onClick="onSwitchToLoginButtonClick"
            android:id="@+id/switchToLoginButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="12dp"

            android:text="Войти"
            android:textAllCaps="false"
            android:textSize="16dp"
            android:textColor="@color/darkGreen"
            android:background="@drawable/nobackground_btn"
            android:textStyle="bold"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>