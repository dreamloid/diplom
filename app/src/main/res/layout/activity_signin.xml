<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignInActivity"
    android:background="@drawable/png_background_sign_and_reg">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="145dp"
        android:layout_height="145dp"

        android:layout_marginStart="20dp"
        android:layout_marginTop="270dp"
        android:layout_marginEnd="202dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_logo" />
    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="36dp"
        android:layout_marginTop="370dp"
        android:layout_marginEnd="214dp"

        android:text="Агро Инвест"
        android:textSize="15dp"
        android:textColor="@color/darkGreen"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/emailText"
        android:layout_width="325dp"
        android:layout_height="34dp"

        android:layout_marginStart="20dp"
        android:layout_marginTop="428dp"
        android:layout_marginEnd="20dp"

        android:backgroundTint="@color/darkGreen"
        android:hint="E-mail"
        android:inputType="textEmailAddress"

        android:paddingStart="13dp"
        android:paddingTop="0dp"
        android:paddingEnd="20dp"
        android:paddingBottom="11dp"

        android:textColor="@color/darkGreen"
        android:textColorHint="@color/darkGreen"
        android:textSize="20dp"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/passwordText"
        android:layout_width="325dp"
        android:layout_height="34dp"

        android:layout_marginStart="20dp"
        android:layout_marginTop="500dp"
        android:layout_marginEnd="20dp"

        android:inputType="textPassword"
        android:hint="Пароль"
        android:backgroundTint="@color/darkGreen"

        android:paddingStart="13dp"
        android:paddingEnd="20dp"
        android:paddingBottom="11dp"
        android:paddingTop="0dp"

        android:textColorHint="@color/darkGreen"
        android:textSize="20dp"
        android:textColor="@color/darkGreen"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.appcompat.widget.AppCompatButton
        android:onClick="onAuthorizationButtonClick"
        android:id="@+id/authorizationButton"
        android:layout_width="325dp"
        android:layout_height="52dp"

        android:layout_marginStart="20dp"
        android:layout_marginTop="565dp"
        android:layout_marginEnd="20dp"

        android:text="Вход"
        android:textAllCaps="true"
        android:textColor="@color/ligthGreen"
        android:textSize="24dp"
        android:background="@drawable/darkgreen_btn"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/switchToRegistrationButton"
        android:onClick="onSwitchToRegistrationButtonClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="4dp"
        android:layout_marginEnd="173dp"
        android:layout_marginBottom="48dp"

        android:text="Зарегистрироваться"
        android:textAllCaps="false"
        android:textSize="16dp"
        android:textColor="@color/darkGreen"
        android:background="@drawable/nobackground_btn"
        android:textStyle="bold"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>